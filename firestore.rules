rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ──────────────────────────────────────────────────────────────
    //  User-specific data
    // ──────────────────────────────────────────────────────────────
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ──────────────────────────────────────────────────────────────
    //  Device State Control (Writable by any authenticated user)
    // ──────────────────────────────────────────────────────────────
    match /devices/{deviceId} {
      allow read, write: if request.auth != null;
    }

    // ──────────────────────────────────────────────────────────────
    //  Public Weather Data
    // ──────────────────────────────────────────────────────────────
    match /weather/{docId} {
      allow read: if request.auth != null;
      // Only an admin account can write global weather
      allow write: if request.auth != null && request.auth.uid == 'd2La4nKBSUQYTF5aokjYjo1x3NH3';
    }
  }
}
